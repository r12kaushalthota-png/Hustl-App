{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "sourceMap": false,
    "inlineSources": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@assets/*": ["./assets/*"],
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@contexts/*": ["contexts/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@constants/*": ["constants/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}